<% include ../partials/header %>

<div class="casino" style="display:block;">
    <div class="ui grid centered">
        <div class="twelve wide column">
            <div class="ui list">
                <% if(currentUser) { %>
                <!-- player item template -->
                <div class="player item">
                    <img class="ui avatar image" src="<%= currentUser.avatar%>" alt="avatar">
                    <div class="content">
                        <div class="header"><b class="name"><%= currentUser.name%></b></div>
                        <div class="description event"></div>
                        <%= currentUser.event%>
                    </div>
                </div>
                <!-- end player item template -->

            </div>

            <div class="logout ui left floated secondary button inverted">
                <i class="left chevron icon"></i><a href="/blogs">Back</a>
            </div>

            <div class="logout ui left floated secondary button inverted">
                <i class="left chevron icon"></i><a href="/logout">Logout</a>
            </div>

            <% } else { %>
            <% } %>

        </div>
        <div class="four wide column">
            <div class="search ui small icon input ">
                <form action="/blogs" method="GET" id="blog-search">
                    <div class="search ui small icon input ">
                        <i class="search icon"></i>
                        <input type="text" name="search" placeholder=" search...">
                        <input type="submit" value="Search">
                    </div>
                </form>
            </div>
            <% if(noMatch !== null){ %>
            <h3><%= noMatch %></h3>
            <% } %>

        </div>
    </div>

    <div class="ui grid">
        <div class="sixteen wide column">
            <h3 class="ui dividing header">Games</h3>

            <div class="ui relaxed divided game items links">

                <!-- game item template -->
                <div class="game item">
                    <div class="ui small image">
                        <img src="<%= blogs.icon %>" alt="game-icon">
                    </div>
                    <div class="content">
                        <div class="header"><b class="name"><%= blogs.name %></b></div>
                        <div class="description">
                            <%= blogs.description %>
                        </div>
                        <div class="extra">
                            <div class="play ui right floated secondary button inverted">
                                <a href="<%= blogs.game%>" target="_blank">Play</a>
                                <i class="right chevron icon"></i>
                            </div>
                        </div>
                    </div>
                </div>
                <!-- end game item template -->
                <div id="game-launch">
                    <hr>
                    <div class="ui right floated secondary button inverted"><i class="left chevron icon"></i>
                        <a href="/blogs/<%= blogs._id %>/comments/new">Add New Comment</a>
                    </div>
                    <% blogs.comments.forEach(function(comment){ %>
                    <strong><%= comment.author.username %></strong>
                    <p><%= comment.text %></p>
                    <% }) %>
                </div>
            </div>
        </div>

    </div>
</div>

<% include ../partials/footer %>
